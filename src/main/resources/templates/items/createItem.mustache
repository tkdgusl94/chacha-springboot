{{>layout/header}}
<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">
            <div class="col-md-6">
                <label>상품 등록</label>
                <form>
                    <div class="form-group">
                        <label for="name">이름</label>
                        <input type="text" class="form-control" id="name" placeholder="상품명을 입력하세요.">
                    </div>
                    <div class="form-group">
                        <label for="price">가격</label>
                        <input type="number" class="form-control" id="price" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="stockQuantity">수량</label>
                        <input type="number" class="form-control" id="stockQuantity" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="author">저자</label>
                        <input type="text" class="form-control" id="author" placeholder="저자를 입력해주세요.">
                    </div>
                    <div class="form-group">
                        <label for="isbn">ISBM</label>
                        <input type="text" class="form-control" id="isbn" placeholder="ISBN을 입력하세요.">
                    </div>
                    <div class="form-group">
                        <label for="img">사진 업로드</label>
                        <input type="file" id="img">
                    </div>

                </form>
                <a href="/" role="button" class="btn btn-secondary">취소</a>
                <button type="button" class="btn btn-primary" id="btn-item-save">등록</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/app/item.js"></script>
{{>layout/footer}}